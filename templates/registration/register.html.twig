{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<!-- Navbar -->
    <nav class="navbar navbar-expand-lg btn-primary">
      <a class="navbar-brand " href="twitter/twitter"><img src="{{ asset('build/images/logo.png') }}" height="60" width="60" style="float:left;margin:0 10px 0 20px;"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav btn-group" >
          
          <li class="nav-item active btn btn-secondary">
            <a class="nav-link text-white" href="/twitter">Accueil</a>
          </li>
          <li class="nav-item active btn btn-secondary">
            <a class="nav-link text-white" href="/login">Login</a>
        </li>
          <li class="nav-item active btn btn-secondary">
            <a class="nav-link text-white" href="/register">Register</a>
          </li>
<form class="form-inline">
          {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    </form>
        </ul>

        
        
      </div>
    </nav>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="{{ asset('build/images/logo.png') }}"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        {{ form_start(registrationForm) }}
          <!-- Email input -->
          
          <div class="form-outline mb-4">
            {{ form_row(registrationForm.email) }}</div>
            
          </div>
          <!-- Password input -->
          <div class="form-outline mb-4">
            {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
            
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            
            {{ form_row(registrationForm.agreeTerms) }}

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Connexion</button>
    {{ form_end(registrationForm) }}

      </div>
    </div>
  </div>
</section>
      
{% endblock %}


